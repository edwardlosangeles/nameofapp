<div id="carousel-index" class="carousel slide" data-ride="carousel">

  <ol class="carousel-indicators">

    <% for i in 0..@products.length-1 %>
      <li data-target="#carousel-index" data-slide-to="<%= i %>"<%= " class=active" if i == 0 %> ></li>
    <% end %>
    
  </ol><!-- indicators -->

  <div class="carousel-inner" role="listbox">     
    
    <% @products.each do |product| %>
    
      <div class="item<%= " active" if product == @products.first %>">
        <div class="center-image">
          <%= image_tag(product.image_url, class: "img-responsive") %>
        </div>
        <div class="carousel-caption">
          <h3><%= product.name %></h3>
          <p><%= product.description %></p>
        </div>
      </div> <!-- item -->
    
    <% end %> <!-- end loop -->

  </div> <!-- carousel-inner -->

  <a class="left carousel-control" href="#carousel-index" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a> <!-- left arrow control -->
  <a class="right carousel-control" href="#carousel-index" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a> <!-- right arrow control -->

</div> <!-- carousel -->
